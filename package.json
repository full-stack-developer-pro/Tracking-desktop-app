{
  "name": "tracking-desktop-app",
  "private": true,
  "description": "A desktop application for tracking time and activity",
  "author": "Tracking Time Team",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && npm run electron-dev\"",
    "electron-dev": "electron .",
    "build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win",
    "build:mac": "vite build && electron-builder --mac",
    "build:linux": "vite build && electron-builder --linux",
    "build:all": "vite build && electron-builder -wml",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.tracking-time.app",
    "productName": "Tracking Time",
    "asar": true,
    "files": [
      "dist",
      "dist-electron"
    ],
    "publish": {
      "provider": "github",
      "owner": "full-stack-developer-pro",
      "repo": "Tracking-desktop-app"
    },
    "protocols": [
      {
        "name": "Tracking Time Protocol",
        "schemes": [
          "tracking-time"
        ]
      }
    ],
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hookform/resolvers": "^5.2.1",
    "@mui/icons-material": "^7.3.2",
    "@mui/joy": "^5.0.0-beta.52",
    "@mui/material": "^6.5.0",
    "@tailwindcss/vite": "^4.1.12",
    "axios": "^1.13.2",
    "dotenv": "^17.2.2",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "form-data": "^4.0.5",
    "googleapis": "^168.0.0",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.62.0",
    "react-router-dom": "^7.8.2",
    "react-toastify": "^11.0.5",
    "tailwindcss": "^4.1.12",
    "uuid": "^13.0.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/form-data": "^2.2.1",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.2.1",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^9.0.3"
  },
  "main": "dist-electron/main.js"
}
